<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@color/background_beige">

    <!-- Display -->
    <EditText
        android:id="@+id/displayEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:textSize="32sp"
        android:inputType="none"
        android:enabled="false"
        android:background="@color/calculator_display"
        android:textColor="@color/calculator_button_text"
        android:text="0"
        android:padding="16dp"
        android:textStyle="bold"
        android:gravity="end" />

    <!-- Buttons Grid -->
    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:columnCount="4"
        android:rowCount="5">

        <!-- Row 1 -->
        <Button
            android:id="@+id/clearButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_margin="4dp"
            android:text="C"
            android:textSize="20sp"
            android:backgroundTint="@color/calculator_button"
            android:textColor="@color/calculator_button_text" />

        <Button
            android:id="@+id/backspaceButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_margin="4dp"
            android:text="⌫"
            android:textSize="20sp"
            android:backgroundTint="@color/calculator_button"
            android:textColor="@color/calculator_button_text" />

        <Button
            android:id="@+id/divideButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_margin="4dp"
            android:text="/"
            android:textSize="20sp"
            android:backgroundTint="@color/calculator_button"
            android:textColor="@color/calculator_button_text" />

        <Button
            android:id="@+id/multiplyButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_margin="4dp"
            android:text="×"
            android:textSize="20sp"
            android:backgroundTint="@color/calculator_button"
            android:textColor="@color/calculator_button_text" />

        <!-- Row 2 -->
        <Button
            android:id="@+id/button7"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_margin="4dp"
            android:text="7"
            android:textSize="20sp"
            android:backgroundTint="@color/calculator_button"
            android:textColor="@color/calculator_button_text" />

        <Button
            android:id="@+id/button8"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_margin="4dp"
            android:text="8"
            android:textSize="20sp"
            android:backgroundTint="@color/calculator_button"
            android:textColor="@color/calculator_button_text" />

        <Button
            android:id="@+id/button9"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_margin="4dp"
            android:text="9"
            android:textSize="20sp"
            android:backgroundTint="@color/calculator_button"
            android:textColor="@color/calculator_button_text" />

        <Button
            android:id="@+id/subtractButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_margin="4dp"
            android:text="-"
            android:textSize="20sp"
            android:backgroundTint="@color/calculator_button"
            android:textColor="@color/calculator_button_text" />

        <!-- Row 3 -->
        <Button
            android:id="@+id/button4"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_margin="4dp"
            android:text="4"
            android:textSize="20sp"
            android:backgroundTint="@color/calculator_button"
            android:textColor="@color/calculator_button_text" />

        <Button
            android:id="@+id/button5"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_margin="4dp"
            android:text="5"
            android:textSize="20sp"
            android:backgroundTint="@color/calculator_button"
            android:textColor="@color/calculator_button_text" />

        <Button
            android:id="@+id/button6"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_margin="4dp"
            android:text="6"
            android:textSize="20sp"
            android:backgroundTint="@color/calculator_button"
            android:textColor="@color/calculator_button_text" />

        <Button
            android:id="@+id/addButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_margin="4dp"
            android:text="+"
            android:textSize="20sp"
            android:backgroundTint="@color/calculator_button"
            android:textColor="@color/calculator_button_text" />

        <!-- Row 4 -->
        <Button
            android:id="@+id/button1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_margin="4dp"
            android:text="1"
            android:textSize="20sp"
            android:backgroundTint="@color/calculator_button"
            android:textColor="@color/calculator_button_text" />

        <Button
            android:id="@+id/button2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_margin="4dp"
            android:text="2"
            android:textSize="20sp"
            android:backgroundTint="@color/calculator_button"
            android:textColor="@color/calculator_button_text" />

        <Button
            android:id="@+id/button3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_margin="4dp"
            android:text="3"
            android:textSize="20sp"
            android:backgroundTint="@color/calculator_button"
            android:textColor="@color/calculator_button_text" />

        <Button
            android:id="@+id/equalsButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_rowWeight="2"
            android:layout_rowSpan="2"
            android:layout_margin="4dp"
            android:text="="
            android:textSize="20sp"
            android:backgroundTint="@color/primary_dark_beige"
            android:textColor="@color/white" />

        <!-- Row 5 -->
        <Button
            android:id="@+id/button0"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="2"
            android:layout_rowWeight="1"
            android:layout_columnSpan="2"
            android:layout_margin="4dp"
            android:text="0"
            android:textSize="20sp"
            android:backgroundTint="@color/calculator_button"
            android:textColor="@color/calculator_button_text" />

        <Button
            android:id="@+id/decimalButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_margin="4dp"
            android:text="."
            android:textSize="20sp"
            android:backgroundTint="@color/calculator_button"
            android:textColor="@color/calculator_button_text" />

    </GridLayout>

</LinearLayout>