<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/loginFragment">

    <!-- Auth Flow -->
    <fragment
        android:id="@+id/loginFragment"
        android:name="com.example.weatherapp.ui.auth.login.LoginFragment"
        android:label="Вход"
        tools:layout="@layout/fragment_login">

        <action
            android:id="@+id/action_login_to_registration"
            app:destination="@id/registrationFragment" />

        <action
            android:id="@+id/action_login_to_weather"
            app:destination="@id/weatherFragment"
            app:popUpTo="@id/loginFragment"
            app:popUpToInclusive="true" />

    </fragment>

    <fragment
        android:id="@+id/registrationFragment"
        android:name="com.example.weatherapp.ui.auth.registration.RegistrationFragment"
        android:label="Регистрация"
        tools:layout="@layout/fragment_registration">

        <action
            android:id="@+id/action_registration_to_login"
            app:destination="@id/loginFragment" />

    </fragment>

    <!-- Main Flow -->
    <fragment
        android:id="@+id/weatherFragment"
        android:name="com.example.weatherapp.ui.weather.WeatherFragment"
        android:label="Погода"
        tools:layout="@layout/fragment_weather" />

    <fragment
        android:id="@+id/calculatorFragment"
        android:name="com.example.weatherapp.ui.calculator.CalculatorFragment"
        android:label="Калькулятор"
        tools:layout="@layout/fragment_calculator" />

</navigation>